<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10px" android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    - <LinearLayout android:layout_width="match_parent"

    android:layout_height="120px">

    <TextView
        android:id="@+id/offline"
        android:layout_width="372dp"
        android:layout_height="120px"
        android:layout_weight="8"
        android:background="@drawable/button_style"

        android:text="已 接 收 短 信"
        android:textColor="#F7F7F7"
        android:textSize="25dp" />

    <Button

        android:id="@+id/received"
        android:background="@drawable/button_style_circle"
        android:layout_gravity="center_vertical"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:text="+"
        android:textColor="#F7F7F7"

        />



</LinearLayout>
    - <LinearLayout android:layout_width="match_parent"

    android:layout_height="400px">


    <TextView
        android:id="@+id/send_mss"
        android:background="@drawable/button_style2"
        android:layout_width="0px"
        android:layout_height="400px"

        android:layout_weight="3"
        android:text="\我收到了A……\n\n我收到了B……\n\n我收到了C……"

        android:textSize="18sp"

        />

</LinearLayout>
    - <LinearLayout android:layout_width="match_parent"

    android:layout_height="120px">

    <TextView
        android:id="@+id/offlin"
        android:layout_width="366dp"
        android:layout_height="120px"
        android:layout_weight="8"
        android:background="@drawable/button_style"

        android:text="已 发 送 短 信"
        android:textColor="#F7F7F7"
        android:textSize="25dp" />

    <Button

        android:id="@+id/sended"
        android:background="@drawable/button_style_circle"
        android:layout_gravity="center_vertical"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:text="+"
        android:textColor="#F7F7F7"

        />



</LinearLayout>
    - <LinearLayout android:layout_width="match_parent"

    android:layout_height="400px">


    <TextView
        android:id="@+id/senda"
        android:background="@drawable/button_style2"
        android:layout_width="0px"
        android:layout_height="400px"

        android:layout_weight="3"
        android:text="\n我发送了A……\n\n我发送了B……\n\n我发送了C……"

        android:textSize="18sp"

        />
</LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="100px">
        <LinearLayout android:layout_width="wrap_content"
            android:orientation="horizontal"

            android:layout_height="100px">


            <Button

                android:id="@+id/box"
                android:background="@drawable/button_style"
                android:layout_gravity="center_vertical"
                android:layout_width="70dip"
                android:layout_height="40dip"
                android:text="草稿箱"
                android:textColor="#F7F7F7"
                />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_height="100px">


            <Button

                android:id="@+id/send"
                android:layout_width="70dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_style"
                android:text="发送短信"
                android:textColor="#F7F7F7" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
