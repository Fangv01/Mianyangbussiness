<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10px" android:orientation="vertical">
        - <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:background="@drawable/button_style"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"

            android:textColor="#F7F7F7"
            />
    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="125px"

            >
            <EditText
                android:id="@+id/recver_number"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:hint="刘总："
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/save"
            android:paddingTop="5dp"
            android:layout_width="match_parent"

            android:gravity="right"
            android:layout_height="150px"

            >

            <Button
                android:id="@+id/saveintobox"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:background="@drawable/message_box2"


                android:textColor="#F7F7F7"
                />




        </LinearLayout>

        - <LinearLayout
        android:paddingTop="45dp"
        android:id="@+id/send_mss"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="top"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/mss"
            android:layout_width="0px"
            android:background="@drawable/underline"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="8"
            android:gravity="top"
            android:hint="在此编辑短信内容     "

            android:textSize="27sp" />

        <Button
            android:id="@+id/snd_mss"
            android:background="@drawable/message_send2"
            android:layout_width="5px"

            android:layout_height="115px"
            android:layout_weight="1"

            android:textColor="#F7F7F7"
            android:textSize="15sp"

            ></Button>

    </LinearLayout>
    </LinearLayout>
</ScrollView>